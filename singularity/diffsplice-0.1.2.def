BootStrap: yum
OSVersion: 7
MirrorURL: http://yum-repos.hpccluster/centos/7/os/$basearch/
Include: yum
 
# If you want the updates (available at the bootstrap date) to be installed
# inside the container during the bootstrap instead of the General Availability
# point release (7.x) then uncomment the following line
 
UpdateURL: http://yum-repos.hpccluster/centos/7/updates/$basearch/
 
%runscript
 
%post
    mkdir /jic
    mkdir /nbi
    mkdir /tgac
    mkdir /tsl
    mkdir /opt/software

    ### Install your packages ###
    yum -y install wget tar gzip make gcc gcc-c++ csh perl

    cd /opt/software
    wget http://protocols.netlab.uky.edu/~yin/download/diffsplice/diffsplice_0.1.2beta.tgz
    tar xvzf diffsplice_0.1.2beta.tgz
    cd diffsplice_0.1.2beta
    cp diffsplice /usr/local/bin
